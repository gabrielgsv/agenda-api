generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./agenda.db"
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
  name     String
  tasks    Task[]
}

model Task {
  id          Int      @id @default(autoincrement())
  userId      Int
  title       String
  dateTime    DateTime
  description String
  user        User     @relation(fields: [userId], references: [id])
}
